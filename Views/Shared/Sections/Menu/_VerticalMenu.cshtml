@{
  TempData.Keep();
  string? currentPage = ViewContext.HttpContext.Request.Path;
}

<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

  @* ! Hide app brand if navbar-full *@
  <div class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
    <a asp-controller="Dashboards" asp-action="Index" class="app-brand-link">
      <img src="~/png/autonomiai_logo.png" alt="Logo" style="height:30px;" />
    </a>

    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
      <i class="menu-toggle-icon d-xl-block align-middle"></i>
    </a>
  </div>

  <div class="menu-inner-shadow"></div>

  @* ! Full version menu-items *@
  <ul class="menu-inner py-1">
    <!-- Dashboards -->
    <li class='menu-item@(currentPage.EndsWith("/") || currentPage.StartsWith("/Dashboards") ? " active open" : "")'>
            <a asp-controller="User" asp-action="Dashboard" class="menu-link">
        <i class="menu-icon tf-icons ri-home-smile-line"></i>
        <div>Dashboards</div>
        
      </a>
   
    </li>

    <!-- Layouts -->
        <li class='menu-item @(currentPage.StartsWith("/LayoutExamples") ? "active open" : "")'>
            <a asp-controller="Datasets" asp-action="Dashboard" class="menu-link">
                <i class="menu-icon tf-icons ri-layout-2-line"></i>
                <div>Datasets</div>
            </a>
        </li>


    
    <li class='menu-item@(currentPage.StartsWith("/FrontPages") ? " active open" : "")'>
      <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class='menu-icon tf-icons ri-file-copy-line'></i>
        <div>AI Models</div><div class="badge bg-label-primary fs-tiny rounded-pill ms-auto">Add</div>
      </a>
      <ul class="menu-sub">
        <li class='menu-item@(currentPage.EndsWith("/") || currentPage.StartsWith("/Modeller") ? " active open" : "")'>
                    <a asp-controller="Modeller" asp-action="Index" class="menu-link">
            <div>Modeller</div>
          </a>
        </li>
                <li class='menu-item@(currentPage.EndsWith("/") || currentPage.StartsWith("/Testler") ? " active open" : "")'>
                    <a asp-controller="Testler" asp-action="Index" class="menu-link">
            <div>Testler</div>
          </a>
        </li>
        
      </ul>
    </li>

   
    

</aside>
<!-- / Menu -->
